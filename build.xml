    <exec executable="sudo">
      <arg value="mkdir" />
      <arg value="${dspace_install_dir}-${dspace_version}/" />
    </exec>
    <exec executable="chown">
      <arg value="-R" />
      <arg value="dspace:dspace" />
      <arg value="${dspace_install_dir}-${dspace_version}/" />
    </exec>
    <exec executable="ln">
      <arg value="-s" />
      <arg value="${dspace_install_dir}-${dspace_version}/" />
      <arg value="${dspace_install_dir}" />
    </exec>
-->

    <antcall target="cp_conf" />

    <exec executable="bash">
      <arg value="-c" />
      <arg value="sudo -i -u dspace bash -c 'cd ${dspace_release_dir}/dspace ; ${maven_home}/bin/mvn clean package -Dlicense.skip=true'" />
    </exec>
    <exec executable="bash">
      <arg value="-c" />
      <arg value="sudo -i -u dspace bash -c 'cd ${dspace_release_dir}/dspace/target/dspace-${dspace_version}-build.dir ; ant fresh_install'" />
    </exec>
    <antcall target="cp_webapps" />
    <antcall target="cp_src" />
    <antcall target="comp" />
    <echo message="TEST9" />
  </target>

