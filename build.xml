    <exec executable="make" dir="${TEMP_DIR}/commons-daemon-1.0.8-native-src/unix/">
      <arg value="clean"/> 
    </exec>
    <exec executable="make" dir="${TEMP_DIR}/commons-daemon-1.0.8-native-src/unix/"/>
    <exec executable="cp" dir="${TEMP_DIR}/commons-daemon-1.0.8-native-src/unix/">
      <arg value="jsvc"/> 
