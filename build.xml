    <delete file="${TEMP_DIR}/${MAVEN_TGZ}" quiet="true"/>
    <delete file="${TEMP_DIR}/${TOMCAT_TGZ}" quiet="true"/>
    <delete file="${TEMP_DIR}/${TOMCAT_CNT_TGZ}" quiet="true"/>
